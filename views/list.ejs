
<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>

    <div class="box">
            <% for(let i=0; i<newListItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox" name="" value="">
                    <p><%=newListItems[i]%></p>
                </div>
            <% } %>
  
        <form action="/" method="post">
            <input id="addItems" type="text" name="newItem" value="" placeholder="New Item" autocomplete="off">
            <button name="list" type="submit" value=<%=listTitle%>>+</button>
        </form>
    </div>

<%- include("footer") -%>